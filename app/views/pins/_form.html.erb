<%= form_for @pin, html: { multipart: true } do |f| %>

  <% if @pin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>
      <ul>
        <% @pin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, style: "display: block" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Upload (Image or PDF)", style: "display: block" %>
    <%= f.file_field :image,
          class: "form-control",
          accept: "image/*,application/pdf" %>
    <small class="text-muted">Accepted: JPG/PNG/WebP or PDF (max 10MB)</small>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>

<% end %>