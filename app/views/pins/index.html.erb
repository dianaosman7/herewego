<h1>Listing Pins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td>
          <% if pin.image.attached? %>
  <% if pin.image.image? %>
    <%= image_tag pin.image.variant(resize_to_limit: [300, 300]), class: "pin-thumb" %>
  <% else %>
    <%= link_to "View file", url_for(pin.image), target: "_blank", rel: "noopener" %>
  <% end %>
<% else %>
  <p>No image yet</p>
<% end %>
          <%= pin.description %>
        </td>
        <td><%= link_to "Show", pin %></td>
        <td><%= link_to "Edit", edit_pin_path(pin) %></td>
        <td><%= link_to "Destroy", pin, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>