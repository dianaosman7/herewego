<% if @pins.any? %>
  <div id="pins">
    <% @pins.each do |pin| %>
      <div class="box">
        <%= render pin %>
      </div>
    <% end %>
  </div>

<%= render "shared/login_to_interact" %>
  
  <div class="d-flex justify-content-center mt-4">
    <%= will_paginate @pins %>
  </div>
<% else %>
  <div class="pin-empty text-center mt-4">
    No pins yet.
  </div>
<% end %>