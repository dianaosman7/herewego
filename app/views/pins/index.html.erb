<h1>Listing Pins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td>
          <% if pin.image.attached? %>
            <%= image_tag pin.image.variant(resize_to_limit: [100, 100]) %><br>
          <% end %>
          <%= pin.description %>
        </td>
        <td><%= link_to "Show", pin %></td>
        <td><%= link_to "Edit", edit_pin_path(pin) %></td>
        <td><%= link_to "Destroy", pin, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>